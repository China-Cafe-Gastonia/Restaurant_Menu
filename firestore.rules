rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin (optional: add admin check logic)
    function isAdmin() {
      return isAuthenticated();
      // Optional: Add custom claims check
      // return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Public menu data - read-only for everyone
    match /artifacts/{appId}/public/data/menu_data/{document=**} {
      allow read: if true;
      allow write: if false; // Public can never write
    }
    
    // Private/Admin menu data - authenticated users only
    match /artifacts/{appId}/private/data/menu_data_admin/{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Backup collections (if you store backups in Firestore)
    match /artifacts/{appId}/backups/{backup}/{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Analytics or usage data (optional)
    match /artifacts/{appId}/analytics/{document=**} {
      allow read: if isAdmin();
      allow create: if true; // Allow anonymous tracking
      allow update, delete: if isAdmin();
    }
    
    // Default deny all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
